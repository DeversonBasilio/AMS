{
  "name": "ams",
  "version": "1.0.0",
  "description": "AMS - Access management system: It controls the users and permissions of the system",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run swagger",
    "build": "rimraf ./build && tsc",
    "preserve": "npm run build",
    "pre:dev": "npm run swagger",
    "dev": "npm run build && cross-env NODE_ENV=dev concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "start": "cross-env NODE_ENV=prod node build/src/index.js",
    "swagger": "tsoa spec && tsoa routes",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate:dev": "cross-env NODE_ENV=dev  npx sequelize-cli db:migrate",
    "migrate:test": "cross-env NODE_ENV=test  npx sequelize-cli db:migrate",
    "migrate:prod": "cross-env NODE_ENV=prod  npx sequelize-cli db:migrate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "rimraf": "^6.0.1",
    "sequelize": "^6.37.7",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npx ts-node src/index.ts"
  }
}
